{
  "name": "inpeace",
  "version": "1.0.0",
  "description": "Block distracting websites to stay focused and at peace",
  "scripts": {
    "build": "webpack --mode production && node postbuild.js",
    "dev": "webpack --mode development --watch",
    "watch": "webpack --mode development --watch && node postbuild.js",
    "clean": "rimraf dist",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "chrome-extension",
    "productivity",
    "focus",
    "website-blocker"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/dom": "^10.4.1",
    "@types/chrome": "^0.0.268",
    "@vitest/coverage-v8": "^4.0.9",
    "@vitest/ui": "^4.0.9",
    "autoprefixer": "^10.4.22",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.2",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.2.0",
    "mini-css-extract-plugin": "^2.9.4",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.0",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.5",
    "style-loader": "^4.0.0",
    "tailwindcss": "^4.1.16",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "vitest": "^4.0.9",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  }
}
